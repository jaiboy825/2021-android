<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadDBActivity">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DB Select 결과"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:textSize="20dp"
        android:text="Title : " />
    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_toRightOf="@+id/label_title"
        android:textSize="20dp"
        android:text="test"/>
    <TextView
        android:id="@+id/label_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title"
        android:textSize="20dp"
        android:text="Contents : " />
    <TextView
        android:id="@+id/result_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_title"
        android:layout_toRightOf="@+id/label_contents"
        android:textSize="20dp"
        android:text="test"/>
</RelativeLayout>